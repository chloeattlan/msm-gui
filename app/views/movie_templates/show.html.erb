<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a>

<div> 
<a href="/delete_movie/<%= @the_movie.id %>">Delete movie</a>
</div>




<form action="/modify_movie/<%=@the_movie.id%>" method="post">
  <div>
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" value = "<%= @the_movie.title%>">
  </div>

  <div>
    <label for="year">
      Year
    </label>

    <input type="text" id="year" name="year"value = "<%= @the_movie.year%>">
  </div>

  <div>
    <label for="duration">
      Duration
    </label>

    <input type="text" id="duration" name="duration" value = "<%= @the_movie.duration%>">
  </div>

  <div>
    <label for="description">
      Description
    </label>

    <input type="description" id="description" name="description" value = "<%= @the_movie.description%>">
  </div>

  <div>
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" value = "<%= @the_movie.image%>">
  </div>

  <div>
    <label for="director_id">
      Director ID
    </label>

    <input type="text" id="director_id" name="director_id" value = "<%= @the_movie.director_id%>">
  </div>

  <button>
    Update movie
  </button>
</form>




<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
      <% matching_directors = Director.where({ :id => @the_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>
      <% if the_director == nil %>
          Uh oh! We weren't able to find a director for this movie.
      <% else %>
        <%= the_director.name %>
      <% end %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
